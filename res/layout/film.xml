<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
  	
  	<RelativeLayout android:id="@+id/toolbar_container"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentLeft="true"
   	    android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

   	    <ToggleButton
   	        android:id="@+id/main_button"
   	        android:layout_width="25dp"
   	        android:layout_height="30dp"
   	        android:layout_alignParentLeft="true"
   	        android:layout_alignParentTop="true"
            android:textOff=""
            android:textOn=""
   	        android:background="@drawable/menu_button"/>

   	    <Button
   	        android:id="@+id/button_home"
   	        android:layout_width="25dp"
   	        android:layout_height="25dp"
   	        android:layout_alignParentRight="true"
   	        android:layout_alignParentTop="true"
   	        android:background="@drawable/home_button"/>


    
   	</RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
   	    android:layout_alignParentLeft="true"
   	    android:layout_alignParentRight="true"
        android:layout_below="@+id/toolbar_container">
        <FrameLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">
        <RelativeLayout android:id="@+id/menu_container"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentBottom="true"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentTop="true" 
            android:layout_weight="1">

	    </RelativeLayout>

   	 	<RelativeLayout android:id="@+id/list_container"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_alignParentBottom="true"
    	    android:layout_toRightOf="@+id/menu_container"
    	    android:layout_alignParentTop="true"
    	    android:layerType="software"
			android:background="#dddddd" >
			
		<RelativeLayout android:id="@+id/head_container"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content">
   	    	 	<ImageView
   	    	 	    android:id="@+id/image_poster"
   	    	 	    android:layout_width="wrap_content"
   	    	 	    android:layout_height="wrap_content"
   	    	 	    android:layout_alignParentLeft="true"
   	    	 	    android:layout_alignParentTop="true"
   	    	 	    android:src="@drawable/ic_launcher" />

   	    	 	<TextView
   	    	 	    android:id="@+id/text_name"
   	    	 	    android:layout_width="wrap_content"
   	    	 	    android:layout_height="wrap_content"
   	    	 	    android:layout_alignParentTop="true"
   	    	 	    android:layout_toRightOf="@+id/image_poster"
   	    	 	    android:text="KinoOst"
   	    	 	    android:textAppearance="?android:attr/textAppearanceLarge" />

   	    	 	<TextView
   	    	 	    android:id="@+id/text_year"
   	    	 	    android:layout_width="wrap_content"
   	    	 	    android:layout_height="wrap_content"
   	    	 	    android:layout_below="@+id/text_name"
   	    	 	    android:layout_toRightOf="@+id/image_poster"
   	    	 	    android:text="TextView" />

   	    	 	<TextView
   	    	 	    android:id="@+id/text_mark"
   	    	 	    android:layout_width="wrap_content"
   	    	 	    android:layout_height="wrap_content"
   	    	 	    android:layout_below="@+id/text_year"
   	    	 	    android:layout_toRightOf="@+id/image_poster"
   	    	 	    android:text="TextView" />

   	    	 	<Button
   	    	 	    android:id="@+id/button_mark"
   	    	 	    android:layout_width="17dp"
   	    	 	    android:layout_height="17dp"
   	    	 	    android:layout_alignTop="@+id/text_mark"
   	    	 	    android:layout_toRightOf="@+id/text_mark"
   	    	 	    android:text="" />

    	</RelativeLayout>
    	
		<RelativeLayout android:id="@+id/bot_container"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"  	    	 	
    	    android:layout_below="@+id/head_container">
   	    	 	
		<ListView
		    android:id="@+id/list_osts"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:visibility="invisible" >

		</ListView>
    	</RelativeLayout>


    	</RelativeLayout>


    </FrameLayout>
    
    </RelativeLayout>

 
</RelativeLayout>
